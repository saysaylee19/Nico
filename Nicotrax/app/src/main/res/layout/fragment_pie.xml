<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!--Actual Pie Chart -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    </com.github.mikephil.charting.charts.PieChart>
    <!--Increase button -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/plus_icon"
        android:id="@+id/Inc_button"
        android:layout_marginRight="67dp"
        android:layout_marginEnd="67dp"
        android:layout_alignTop="@+id/Dec_button"
        android:layout_alignRight="@+id/chart1"
        android:layout_alignEnd="@+id/chart1" />
    <!--Decrease Button -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/minus_icon"
        android:id="@+id/Dec_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/chart1"
        android:layout_alignStart="@+id/chart1"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />
</RelativeLayout>