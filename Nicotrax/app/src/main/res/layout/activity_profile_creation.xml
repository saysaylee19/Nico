<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffbee1c6"
    tools:context="com.nicotrax.nicotrax.activity.ProfileCreationActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sign Up"
            android:id="@+id/profile_label"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.43"
            android:layout_gravity="center_horizontal" />

        <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profile_pic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/user_icon"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="First Name"
        android:textColor="@color/input_text_color"
        android:ems="10"
        android:id="@+id/first_name"
        android:background="@drawable/rounding"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Last Name"
        android:textColor="@color/input_text_color"
        android:ems="10"
        android:id="@+id/last_name"
        android:background="@drawable/rounding"
        android:layout_marginTop="20dp" />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:id="@+id/birthdatePicker"
            android:background="@drawable/rounding"
            android:calendarViewShown="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.43" />

        <Spinner
        android:id="@+id/gender_spinner"
        android:theme="@style/SpinnerTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:entries="@array/gender_array"
        android:prompt="@string/gender"
        android:background="@drawable/rounding"
        android:layout_below="@+id/date_field"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/date_field"
        android:layout_alignEnd="@+id/date_field" />

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Let&apos;s build your profile so that we can tailor Nicotrax to you!"
        android:id="@+id/info_msg"
        android:layout_above="@+id/started_button"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.14" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started!"
            android:id="@+id/started_button"
            android:background="#ff6ac073"
            android:textColor="#ffffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/profile_pic"
            android:layout_alignEnd="@+id/profile_pic"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
