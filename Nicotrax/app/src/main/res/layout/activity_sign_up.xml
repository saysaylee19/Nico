<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nicotrax.nicotrax.activity.SignUpActivity"
    android:background="#ffbee1c6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign Up"
        android:id="@+id/signUpBox"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/backButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff6ac073"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameText"
        android:layout_below="@+id/signUpBox"
        android:layout_marginTop="138dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounding"
        android:text="First Name"
        android:textColor="#ffd3d3d3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameText"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/firstNameText"
        android:layout_alignEnd="@+id/firstNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Last Name"
        android:textColor="#ffd3d3d3"
        android:background="@drawable/rounding" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dobText"
        android:layout_below="@+id/lastNameText"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/lastNameText"
        android:layout_alignEnd="@+id/lastNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounding"
        android:textColor="#d3d3d3d3"
        android:text="Date of Birth" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderText"
        android:layout_below="@+id/dobText"
        android:layout_marginTop="38dp"
        android:layout_alignRight="@+id/dobText"
        android:layout_alignEnd="@+id/dobText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Gender"
        android:textColor="#ffd3d3d3"
        android:background="@drawable/rounding" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="33dp"
        android:text="Let&apos;s build your profile so that we can tailor Nicotrax for you!"
        android:gravity="center"
        android:background="#ffbee1c6"
        android:layout_below="@+id/genderText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:id="@+id/getStartedButton"
        android:background="#ff6ac073"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/signUpBox"
        android:layout_alignEnd="@+id/signUpBox" />
</RelativeLayout>
