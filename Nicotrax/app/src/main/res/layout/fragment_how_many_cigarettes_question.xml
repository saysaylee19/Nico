<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nicotrax.nicotrax.activity.HowManyCigarettesActivity"
    android:background="#ffbee1c6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/profileText"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How many cigarettes do you smoke everyday?"
        android:id="@+id/QuestionHowMuch"
        android:layout_marginTop="66dp"
        android:typeface="serif"
        android:gravity="center"
        android:layout_below="@+id/profileText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:background="#ff6ac073"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/profileText"
        android:layout_toStartOf="@+id/profileText"
        android:layout_marginBottom="116dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton"
        android:layout_alignTop="@+id/backButton"
        android:layout_toRightOf="@+id/profileText"
        android:layout_toEndOf="@+id/profileText"
        android:background="#ff6ac073"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/howManyTextField"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/QuestionHowMuch"
        android:layout_alignEnd="@+id/QuestionHowMuch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounding" />

</RelativeLayout>
