<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nicotrax.nicotrax.activity.PayPackCigarettesActivity"
    android:background="#ffbee1c6"
    android:id="@+id/PayPack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/profileText"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How much do you pay for a pack of cigarettes?"
        android:id="@+id/QuestionHowMuch"
        android:layout_marginTop="67dp"
        android:typeface="serif"
        android:gravity="center"
        android:layout_below="@+id/profileText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/howMuchPicker"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/QuestionHowMuch"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:background="#ff6ac073"
        android:textColor="#ffffffff"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/howMuchPicker"
        android:layout_toLeftOf="@+id/howMuchPicker"
        android:layout_toStartOf="@+id/howMuchPicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton"
        android:layout_alignTop="@+id/backButton"
        android:layout_toRightOf="@+id/profileText"
        android:layout_toEndOf="@+id/profileText"
        android:background="#ff6ac073"
        android:textColor="#ffffffff" />

</RelativeLayout>
